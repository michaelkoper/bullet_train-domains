<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :domains %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: domain do %>
  <tr data-id="<%= domain.id %>">
    <%= render "shared/tables/checkbox", object: domain %>
    <td><%= render 'shared/attributes/text', attribute: :address, url: [:account, domain] %></td>
    <td><%= render 'shared/attributes/text', attribute: :status %></td>
    <td><%= render 'shared/attributes/text', attribute: :external_hostname_id %></td>
    <td><%= render 'shared/attributes/text', attribute: :txt_verification_name %></td>
    <td><%= render 'shared/attributes/text', attribute: :txt_verification_value %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, domain %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, domain], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, domain %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, domain], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(domain)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
