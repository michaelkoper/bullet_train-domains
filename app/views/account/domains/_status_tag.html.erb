<% color ||= "green" %>

<%
case color.to_sym
when :orange
  div_classes = "bg-orange-100 text-orange-500"
when :green
  div_classes = "bg-green-100 text-green-500"
when :yellow
  div_classes = "bg-yellow-100 text-yellow-500"
when :red
  div_classes = "bg-red-100 text-red-500"
when :gray
  div_classes = "bg-gray-100 text-gray-500"
else
  div_classes = "bg-#{color}-100 text-#{color}-500"
end
%>

<div class="inline-block px-3 py-1 rounded-full text-sm <%= div_classes %>">
  <%= yield %>
</div>
